generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  createdAt DateTime
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Veiculo {
  id              String            @id
  modelo          String
  cor             String
  createdAt       DateTime
  updatedAt       DateTime
  aprovado        Boolean
  Veiculo_Estoque Veiculo_Estoque[]

  @@map("veiculos")
}

model Estoque {
  id              String            @id
  descricao       String
  marca           String
  quantidade      Int
  createdAt       DateTime
  updatedAt       DateTime
  Veiculo_Estoque Veiculo_Estoque[]

  @@map("estoque")
}

model Veiculo_Estoque {
  veiculoId String
  estoqueId String
  veiculo   Veiculo @relation(fields: [veiculoId], references: [id])
  estoque   Estoque @relation(fields: [estoqueId], references: [id])

  @@id([veiculoId, estoqueId])
  @@map("veiculo_estoque")
}
